<div class="container w-25 mx-auto mt-5 border rounded p-3">
  <a href="/" style="text-decoration:none"><small class="text-primary">Quay lại</small></a>
  <h1 class="text-success my-4">Thêm sản phẩm mới</h1>
  <form action="/add" method="POST" enctype="multipart/form-data">
    <div class="form-group my-4">
      <label for="productName" class="mb-2">Tên sản phẩm</label>
      <input
        type="text"
        class="form-control"
        id="productName"
        name="name"
        placeholder="Nhập tên sản phẩm mới"
      />

    </div>
    <div class="form-group my-4">
      <label for="productPrice" class="mb-2">Giá sản phẩm</label>
      <input
        type="text"
        class="form-control"
        id="productPrice"
        name="price"
        placeholder="Nhập giá bán"
      />
    </div>

    <div class="form-group my-4">
      <label for="productImg" class="mb-2">Ảnh sản phẩm</label>
      <input
        type="file"
        class="form-control"
        id="productImg"
        name="img"
        placeholder="Chọn ảnh"
      />
    </div>
    <div class="form-group my-4">
      <label for="productDes" class="mb-2">Mô tả</label>
      <textarea
        class="form-control"
        id="productDes"
        rows="5"
        name="desc"
      ></textarea>
    </div>
    {{#if msg}}
      <div class="alert alert-danger" role="alert">
        {{msg}}
      </div>
    {{/if}}
    <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
  </form>
</div>
<div class="container w-25 mx-auto mt-5 border rounded p-3">
  <a href="/" style="text-decoration:none">
    <small class="text-primary">Quay lại</small></a>
  <h1 class="text-success my-4">Chỉnh sửa sản phẩm</h1>
  <form action="/edit/{{data.id}}" method="POST" enctype="multipart/form-data">
    <div class="form-group my-4">
      <label for="productName" class="mb-2">Tên sản phẩm</label>
      <input
        type="text"
        class="form-control"
        id="productName"
        name="name"
        placeholder="Nhập tên sản phẩm mới"
        value="{{data.name}}"
      />

    </div>
    <div class="form-group my-4">
      <label for="productPrice" class="mb-2">Giá sản phẩm</label>
      <input
        type="text"
        class="form-control"
        id="productPrice"
        name="price"
        placeholder="Nhập giá bán"
        value="{{data.price}}"
      />
    </div>

    <div class="form-group my-4">
      <label for="productImg" class="mb-2">Ảnh sản phẩm</label>
      <input
        type="file"
        class="form-control"
        id="productImg"
        name="img"
        placeholder="Chọn ảnh"
      />
    </div>
    <div class="my-4" style="background-size:cover">
      <img
        src="/{{data.img}}"
        alt="img"
        style="width:auto;height:200px"
        class="d-block mx-auto"
      />
    </div>
    <div class="form-group my-4">
      <label for="productDes" class="mb-2">Mô tả</label>
      <textarea
        class="form-control"
        id="productDes"
        rows="5"
        name="desc"
      >{{data.desc}}</textarea>
    </div>
    {{#if msg}}
      <div class="alert alert-danger" role="alert">
        {{msg}}
      </div>
    {{/if}}
    <button type="submit" class="btn btn-success">Chỉnh sửa</button>
  </form>
</div>